@using MVCDemoB.Models
@model IEnumerable<Member>

@{
    ViewBag.Title = "Member List";
}

<h2>List of Members</h2>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Id)</th>
        <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th>...</th>
    </tr>

    @foreach (Member m in Model)
    {
        <tr>
            <td>@Html.DisplayFor(item=>m.Id) </td>
            <td>@Html.DisplayFor(item =>m.Name) </td>
            <td>
                @Html.ActionLink("Games", "EditFavoriteGames", new { Id = m.Id }) |
                @Html.ActionLink("Edit","Edit", new {Id = m.Id }) |
                @Html.ActionLink("Detail", "Detail", new { Id = m.Id }) |
                @Html.ActionLink("Delete", "Delete", new { Id = m.Id }) 

            </td>
        </tr>
    }

</table>

@Html.ActionLink("Add New Member", "Create")
